rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwnerOrAssignee(todo) {
      return todo.ownerUid == request.auth.uid || (todo.assigneeUids is list && request.auth.uid in todo.assigneeUids);
    }

    match /todos/{todoId} {
      allow read: if isSignedIn() && isOwnerOrAssignee(resource.data);
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
